{
  "manifest_version": 3,
  "name": "הקלדה קולית בעברית",
  "version": "1.0",
  "description": "תוסף להקלדה קולית בעברית בכל שדה טקסט",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["src/content/content.js"]
  }],
  "action": {
    "default_popup": "src/popup/popup.html"
  }
} 